{{ form_start(form, {'attr': {'class': 'row'}}) }}

    <div class="input-field col s12 m12 l12">
        {{ form_widget(form.title, {'attr': {'placeholder': 'Titre de l\'article'}}) }}
        {{ form_label(form.title, 'Titre de l\'article') }}
        <span class="error">{{ form_errors(form.title) }}</span>
    </div>

    <div class="input-field col s12 m12 l12">
        {{ form_widget(form.introduction, {'attr': {'placeholder': 'Introduction de l\'article'}}) }}
        {{ form_label(form.introduction, 'Introduction') }}
    </div>

    <div class="input-field col s12 m12 l12">
        {{ form_widget(form.content, {'attr': {'placeholder': 'Contenu de l\'article'}}) }}
        {{ form_label(form.content, 'Contenu') }}
