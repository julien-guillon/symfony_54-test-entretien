{% extends 'base.html.twig' %}
 
{% block title %}Project index{% endblock %}
 
{% block body %}
    <div class="container">
        <h2 class="text-center py-5 mt-5">Symfony Test Entretien</h2>
        <div class="card">
            <div class="card-header">
                <a class="btn btn-outline-primary" href="{{ path('article_new') }}"> 
                    Ajouter un article 
                </a>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <tr>
                        <th>Titre</th>
                        <th width="240px">Action</th>
                    </tr>
                    {% for article in articles %}
                    <tr>
                        <td>{{ article.title }}</td>
                        <td>
                            <form method="post" action="{{ path('article_delete', {'slug': article.slug}) }}" onsubmit="return confirm('ÃŠtes vous sur de vouloir supprimer cet article ?');">
                                <a
                                    class="btn btn-outline-info"
                                    href="{{ path('article_show', {'slug': article.slug}) }}">
                                    Show
                                </a>
                                <a
                                    class="btn btn-outline-success"
                                    href="{{ path('article_edit', {'slug': article.slug}) }}">
                                    Edit
                                </a>
 
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.slug) }}">
                                <button class="btn btn-outline-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
 
{% endblock %}
