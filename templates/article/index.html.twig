{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <h1 class="mt-3">Articles</h1>
            <p class="text-center mb-3"><a class="btn btn-primary" href="{{ path('article_new') }}">Ajouter un article</a></p>
            {% if articles|length > 0 %}
                <div class="list-group w-auto">
                {% for article in articles %}
                    <div class="list-group-item d-flex gap-2 py-3">
                        {% if article.photo is null %}
                        <img src="data:image/gif;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAYAAAAfFcSJAAAAAXNSR0IArs4c6QAAAARnQU1BAACxjwv8YQUAAAAJcEhZcwAADsQAAA7EAZUrDhsAAAANSURBVBhXYzh8+PB/AAffA0nNPuCLAAAAAElFTkSuQmCC" class="flex-shrink-0" width="50" height="50">
                        {% else %}
                        <img src="{{ asset('photos/' ~ article.photo) | imagine_filter('square') }}" alt="{{ article.title }}" class="flex-shrink-0" width="50" height="50">
                        {% endif %}
                        <div class="d-flex gap-2 w-100 justify-content-between">
                            <div>
                                <h6 class="mt-3">{{ article.title }}</h6>
                            </div>
                            <div class="mt-2">
                                <a class="btn-sm btn btn-primary" href="{{ path('article_show', {'slug': article.slug}) }}">Lire</a>
                                <a class="btn-sm btn btn-primary" href="{{ path('article_edit', {'slug': article.slug}) }}">Modifier</a>
                                {{ include('article/_delete_form.html.twig') }}
                            </div>
                        </div>
                    </div>
                {% endfor %}
                </div>
            {% else %}
                <p class="text-center text-danger">Aucun article.</p>
            {% endif %}
        </div>
    </div>
{% endblock %}
